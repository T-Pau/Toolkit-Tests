program create-zip
features zipcmp
arguments -o test.zip -M test.d filelist.txt
return 0

file filelist.txt <>
a
b < a
dir
dir2 < dir
end-of-inline-data

file a <>
file a
end-of-inline-data

file b <>
file b
end-of-inline-data

file dir/file <>
file in dir
end-of-inline-data

file test.zip {} test.zip

file test.d {} <>
test.zip

@TOOLKIT_ROOT@/bin/create-zip
a
dir
dir/file
end-of-inline-data
